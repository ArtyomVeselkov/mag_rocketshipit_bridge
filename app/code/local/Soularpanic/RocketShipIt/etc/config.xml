<?xml version="1.0"?>

<config>
  <modules>
    <Soularpanic_RocketShipIt>
      <version>0.0.1</version>
    </Soularpanic_RocketShipIt>
  </modules>

  <global>
    <models>
      <!-- model group alias for the module -->
      <rocketshipit>
	<!-- base class name -->
	<class>Soularpanic_RocketShipIt_Model</class>
	<resourceModel>rocketshipit_resource</resourceModel>
      </rocketshipit>
      <sales>
	<rewrite>
	  <quote_address_total_shipping>Soularpanic_RocketShipIt_Model_Sales_Quote_Address_Total_ShippingAndHandling</quote_address_total_shipping>
	</rewrite>
      </sales>
      <customer>
	<rewrite>
	  <form>Soularpanic_RocketShipIt_Model_Customer_Form</form>
	</rewrite>
      </customer>
    </models>

    <helpers>
      <rocketshipit>
	<class>Soularpanic_RocketShipIt_Helper</class>
      </rocketshipit>
    </helpers>

    <resources>
      <rocketshipit_setup>
	<setup>
	  <module>Soularpanic_RocketShipIt</module>
	  <class>Soularpanic_RocketShipIt_Model_Resource_Mysql4_Setup</class>
	</setup>
	<connection>
	  <use>core_setup</use>
	</connection>
      </rocketshipit_setup>
    </resources>

    <blocks>
      <adminhtml>
	<rewrite>
	  <sales_order_shipment_view>Soularpanic_RocketShipIt_Block_Sales_Order_Shipment_View</sales_order_shipment_view>
	</rewrite>
      </adminhtml>
    </blocks>

    <fieldsets>
      <sales_convert_quote_address>
	<handling_amount>
	  <to_order>*</to_order>
	</handling_amount>
	<handling_code>
	  <to_order>*</to_order>
	</handling_code>
      </sales_convert_quote_address>
    </fieldsets>

    <!-- <sales> -->
    <!--   <quote> -->
    <!-- 	<totals> -->
    <!-- 	  <rocketshipit> -->
    <!-- 	    <class>rocketshipit/sales_quote_address_total_addons</class> -->
    <!-- 	    <after>shipping</after> -->
    <!-- 	    <before>grand_total</before> -->
    <!-- 	  </rocketshipit> -->
    <!-- 	</totals> -->
    <!--   </quote> -->
    <!-- </sales> -->

    <events>
      <core_block_abstract_prepare_layout_before>
	<observers>
	  <soularpanic_rocketshipit_addmassbutton>
	    <type>model</type>
	    <class>rocketshipit/observer</class>
	    <method>addMassButtons</method>
	  </soularpanic_rocketshipit_addmassbutton>
	</observers>
      </core_block_abstract_prepare_layout_before>
      <checkout_controller_onepage_save_shipping_method>
      	<observers>
      	  <soularpanic_rocketshipit_add_carrier_code_to_order>
      	    <type>singleton</type>
      	    <class>rocketshipit/observer</class>
      	    <method>addHandlingCodeToOrder</method>
	  </soularpanic_rocketshipit_add_carrier_code_to_order>
      	</observers>
      </checkout_controller_onepage_save_shipping_method>
      <sales_order_shipment_save_before>
	<observers>
	  <!--
	      Unique id for event's observers node. By convention, the name of the
	      module in lowercase, but since I expect that we'll have multiple 
	      observers with our module, I'm adding some sort of functional 
	      identifier thingy
	  -->
	  <soularpanic_rocketshipit_track_and_label>
	  <!-- <rocketshipit_foo> -->
	  <!-- <soularpaonic_rocketshipit_ship_before> -->
            <!--<namespace_modulename_ship_before>-->
            <type>singleton</type>
            <!-- <class>Namespace_Modulename_Model_Observer</class> -->
	    <!-- 
		 Model to be instantiated. I think the first part should be the alias
		 defined above and the second part is the file name.
	    -->
	    <class>rocketshipit/observer</class>
            <method>trackAndLabel</method>
	  </soularpanic_rocketshipit_track_and_label>
	</observers>
      </sales_order_shipment_save_before>
    </events>
  </global>

  <admin>
    <routers>
      <adminhtml>
	<use>admin</use>
	<args>
	  <modules>
	    <rocketshipit after="Mage_Adminhtml">Soularpanic_RocketShipIt</rocketshipit>
	  </modules>
	</args>
      </adminhtml>
    </routers>
  </admin>

  <frontend>
    <routers>
      <rocketshipit>
	<use>standard</use>
	<args>
	  <module>Soularpanic_RocketShipIt</module>
	  <frontName>rocketshipit</frontName>
	</args>
      </rocketshipit>
      <!-- This allows me to override the onepage controller, but I don't have to do that yet. -->
      <checkout>
	<args>
	  <modules>
	    <rocketshipit before="Mage_Checkout">Soularpanic_RocketShipIt</rocketshipit>
	  </modules>
	</args>
      </checkout>
    </routers>
  </frontend>

  <!-- Need this if I want to change backend .phtmls -->
  <stores>
    <admin>
      <design>
  	<package>
  	  <name>default</name>
  	</package>
  	<theme>
  	  <default>trs_default</default>
  	</theme>
      </design>
    </admin>
  </stores>

  <default>
    <carriers>
      <rocketshipit_global>
	<handling_checkout_header>Shipping Options</handling_checkout_header>
	<none_display>None</none_display>
	<signature_display>Require Signature</signature_display>
	<signAndInsure_display>Require Signature &amp; Insure Shipment</signAndInsure_display>
      </rocketshipit_global>
      <rocketshipit_ups>
	<model>rocketshipit/carrier_ups</model>
      </rocketshipit_ups>
      <rocketshipit_usps>
      	<model>rocketshipit/carrier_usps</model>
      </rocketshipit_usps>
      <rocketshipit_stamps>
	<model>rocketshipit/carrier_stamps</model>
	<showmethod>1</showmethod>
      </rocketshipit_stamps>
    </carriers>
  </default>
</config>
